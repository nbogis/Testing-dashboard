<h2>Protocols</h2>
<div>
    <% product.protocols.each do |protocol| %>
    <div class="row">
      <div class="col-md-4 center-text">
        <%= link_to protocol.name.html_safe, product_protocol_path(product,protocol) %>
      </div>
      <div class="col-md-4">
        <%= link_to "Edit", edit_product_protocol_path(product,protocol), class:"button animate gray set-to-right" %>
      </div>
      <div class="col-md-4">
        <%= link_to "Delete", product_protocol_path(product,protocol), class:"button animate gray",
        method: :delete, data: {confirm: "Are you sure you want to delete the protocol?"} %></span>
      </div>
    </div>
    <% end %>
    <div>
    <%= link_to '<span class="glyphicon glyphicon-plus"></span>&nbsp Add a protocol'.html_safe, new_product_protocol_path(product) %>
  </div>
</div>
