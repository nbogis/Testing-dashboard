<div class="form">
  <%= form_for product do |form| %>
    <ul>
    <% product.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <div class="form-group">
      <%= form.label "Product name" %><br />
      <%= form.text_field :name, class: "form-control", autofocus: true  %>
    </div>
    <div class="form-group">
      <%= form.label "DHF #" %><br/>
      <%= form.text_field :dhf_num, class:"form-control" , autofocus: true %>
    </div>
    <div>
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
